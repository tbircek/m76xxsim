block inputs
    - var labels = [ 'Input 1:', 'Input 2:' ];
    - var input1Values = [ 'Trip ABC', 'Trip A' ];
    - var input2Values = [ 'Close ABC', 'Close A' ];
    each item in labels
      div(class='input-group mb-3')
        div(class='input-group-prepend')
          label(class='input-group-text', for=item) #{item}
        
        select(class='custom-select', id=item)          
          if ('Input 1:' === item )
            each val in input1Values
                option(value=val) #{val}
          else if ('Input 2:' === item )
            each val in input2Values
                option(value=val) #{val}
          else
            option(value='error') Error
    